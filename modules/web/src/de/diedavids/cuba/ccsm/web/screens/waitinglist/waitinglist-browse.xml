<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="waitinglistsTable"
        messagesPack="de.diedavids.cuba.ccsm.web.screens.waitinglist">
    <data readOnly="true">
        <collection id="waitinglistsDc"
                    class="de.diedavids.cuba.ccsm.entity.example.Waitinglist"
                    view="waitinglist-view">
            <loader id="waitinglistsDl">
                <query>
                    <![CDATA[select e from ccsm_Waitinglist e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="waitinglistsTable"
            spacing="true">
        <filter id="filter"
                applyTo="waitinglistsTable"
                dataLoader="waitinglistsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="waitinglistsTable"
                    width="100%"
                    dataContainer="waitinglistsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="animal"/>
                <column id="position"/>
                <column id="contact"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="waitinglistsTable.create"/>
                <button id="editBtn" action="waitinglistsTable.edit"/>
                <button id="removeBtn" action="waitinglistsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
