<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="animalsTable"
        messagesPack="de.diedavids.cuba.ccsm.web.screens.animal">
    <data readOnly="true">
        <collection id="animalsDc"
                    class="de.diedavids.cuba.ccsm.entity.example.Animal"
                    view="_local">
            <loader id="animalsDl">
                <query>
                    <![CDATA[select e from ccsm_Animal e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="animalsTable"
            spacing="true">
        <filter id="filter"
                applyTo="animalsTable"
                dataLoader="animalsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="animalsTable"
                    width="100%"
                    dataContainer="animalsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="animalsTable.create"/>
                <button id="editBtn" action="animalsTable.edit"/>
                <button id="removeBtn" action="animalsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
