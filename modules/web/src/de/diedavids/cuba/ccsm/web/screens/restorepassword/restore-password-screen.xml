<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.sample.web.screens.restorepassword"
        focusComponent="loginField">

    <dialogMode width="AUTO"/>

    <layout spacing="true">
        <label id="warningLabel"
               icon="font-icon:WARNING"
               visible="false"
               value="Sorry, there is no such user"/>

        <textField id="loginField"
                   width="300px"
                   caption="Login"
                   required="true"
                   requiredMessage="Please enter your login"/>

        <hbox align="MIDDLE_CENTER"
              colspan="2"
              spacing="true">
            <button id="okBtn"
                    align="TOP_RIGHT"
                    caption="Send new password"/>
            <button id="cancelBtn"
                    caption="Cancel"/>
        </hbox>
    </layout>
</window>